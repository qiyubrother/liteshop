
@{
    ViewBag.Title = "Login";

    var ajaxOptions = new AjaxOptions(){
        OnSuccess = "ExcuteSuccess",
        OnFailure = "ExcuteFailure",
        HttpMethod = "Post"
    };
}
<script>
    function ExcuteSuccess()
    {
        ;
    }
    function ExcuteFailure()
    {
        ;
    }
</script>

<div class="header-height-margin">&nbsp;</div>
<h2 class="text-center">登录</h2>
<div class="col-lg-12 col-sm-12 col-xs-12">
    @using (Html.BeginForm("Login", "User", FormMethod.Post, new { @class = "form-horizontal" }))
    {
        <div class="form-group">
            <label for="mobile" class="col-sm-2 control-label">手机号</label>
            <div class="col-sm-8">
                <div class="input-group">
                    <span class="input-group-addon"><span class="fa fa-mobile" style="width: 16px;"></span></span>
                    <input type="tel" class="form-control" id="mobile" name="mobile" placeholder="手机号" /> 
                </div>@Html.ValidationMessage("mobile")
            </div>
        </div>
        <div class="form-group">
            <label for="password" class="col-sm-2 control-label">密码</label>
            <div class="col-sm-8">
                <div class="input-group">
                    <span class="input-group-addon"><span class="fa fa-key" style="width: 16px;"></span></span>
                    <input type="password" class="form-control" id="password" name="password" placeholder="密码" />
                </div>@Html.ValidationMessage("password")
            </div>
        </div>
        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-8">
                <button type="submit" class="btn btn-primary col-lg-12 col-sm-12 col-xs-12"><span class="fa fa-sign-in"></span>&nbsp;登录</button>
            </div>
        </div>
    }
    <div class="text-center">
        @Html.ActionLink("注册", "Register", null, new { @class = "btn btn-default" }) @Html.ActionLink("找回密码", "Reset", null, new { @class = "btn btn-default" })
    </div>
</div>



